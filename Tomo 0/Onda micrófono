// Onda con micrófono
int posX = 0; // creo una variable donde guardar posiciones X
int posY = 0; // creo una variable donde guardar posiciones y

float tamano = 0; //variable para tamaño de pelota

import processing.serial.*; //ARD-PROC
Serial myPort;  // Create object from Serial class  //ARD-PROC
static String val;    // Data received from the serial port  //ARD-PROC
int sensorVal = 0;  //ARD-PROC

void setup(){
  size(1400,900);
  colorMode(HSB, 360,100,100);
  background(0);
  noCursor(); //ESCONDE EL MOUSE
  
  printArray(Serial.list());  //ARD-PROC
  println(Serial.list());
  String portName = "/dev/cu.usbmodem1101";  //ARD-PROC
// NOMBRE DEL PUERTO QUE APARECE EN TOOLS/PORT (ARDUINO) o HERRAMIENTAS/PUERTO
  myPort = new Serial(this, portName, 9600);  //ARD-PROC
  
}
void draw(){
  background(0);
  posX = mouseX; //guardo la posicion X del mouse
  posY = mouseY; //guardo la posicion Y del mouse
  
  if ( myPort.available() > 0) {  // If data is available,  //ARD-PROC
    val = myPort.readStringUntil('\n'); //ARD-PROC
    try { //ARD-PROC
      sensorVal = Integer.valueOf(val.trim()); //ARD-PROC
      //EN sensorVal se está guardando el número que viene de Arduino
    } //ARD-PROC
    catch(Exception e) { //ARD-PROC
      ; //ARD-PROC
    }
    println(sensorVal); // read it and store it in vals! //ARD-PROC
  } //ARD-PROC

  //TU VARIABLE DESDE ARDUINO SE VA A GUARDAR EN sensorVal
  
  tamano = sensorVal;
  
  float brillo = map(posY,0,height,0,100);
  fill(posX,brillo,120);
  noStroke();
  ellipse(posX,posY,tamano,tamano);
  
}
